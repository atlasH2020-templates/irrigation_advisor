  "components": {
    "schemas": {
      "FieldURN": {
        "type": "string",
        "pattern": "^urn:[a-z][a-z0-9_.\\-]*:[\\w-.]+",
        "description": "Uniform resource name of a field with the syntax `urn:<service_id>:<internal_id>`. <service_id> must be the id of a valid and active ATLAS service"
      },
      "AdviceURN": {
        "type": "string",
        "pattern": "^urn:[a-z][a-z0-9_.\\-]*:[\\w-.]+",
        "description": "Uniform resource name of an advice with the syntax `urn:<service_id>:<internal_id>`. <service_id> must be the id of a valid and active ATLAS service"
      },
      "MonitoringRequest": {
        "type": "object",
        "properties": {
          "field_urn": {
            "$ref": "#/components/schemas/FieldURN"
          },
          "notification_url": {
            "type": "string",
            "format": "uri",
            "description": "Invoked with POST with a 'Recommendation' body (see components) when applicable"
          }
        },
        "required": [
          "field_urn"
        ],
        "example": {
          "field_urn": "urn:com.envrio-land.atlas.field_data:fdbe6f55-6179-4b88-9177-4afbed33adac"
        }
      },
      "MonitoringInfo": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": [
              "IN_PROGRESS",
              "CONFIGURATION_REQUIRED",
              "READY",
              "FAILED"
            ],
            "description": "status of the advice preparation"
          },
          "status_message": {
            "type": "string",
            "description": "end-user-friendly message describing the status. In the special case where status is CONFIGURATION_REQUESTED, the message MUST be a browser URL to a configuration UI where further configuration can take place"
          },
          "recommendations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Recommendation"
            }
          }
        },
        "required": [
          "status",
          "recommendations"
        ],
        "example": {
          "status": "READY",
          "recommendations": [
            {
              "date": "2021-07-31",
              "applications": [
                {
                  "time": "2021-07-31T10:00:00Z",
                  "ratio": 40
                },
                {
                  "time": "2021-07-31T18:00:00Z",
                  "ratio": 60
                }
              ]
            }
          ]
        }
      },
      "AdviceRequest": {
        "type": "object",
        "properties": {
          "field_urn": {
            "$ref": "#/components/schemas/FieldURN"
          },
          "application": {
            "type": "object",
            "items": {
              "$ref": "#/components/schemas/Application"
            }
          },
          "notification_url": {
            "type": "string",
            "format": "uri",
            "description": "Invoked with POST with an 'Advice' body (see components) when applicable"
          }
        },
        "required": [
          "field_urn",
          "application"
        ]
      },
      "Advice": {
        "type": "object",
        "properties": {
          "urn": {
            "$ref": "#/components/schemas/AdviceURN"
          },
          "type": {
            "type": "string",
            "pattern": "irrigation"
          },
          "field_urn": {
            "$ref": "#/components/schemas/FieldURN"
          },
          "application": {
            "$ref": "#/components/schemas/Application"
          },
          "status": {
            "type": "string",
            "enum": [
              "IN_PROGRESS",
              "CONFIGURATION_REQUIRED",
              "READY",
              "FAILED"
            ],
            "description": "status of the advice"
          },
          "status_message": {
            "type": "string",
            "description": "end-user-friendly message describing the status. In the special case where status is CONFIGURATION_REQUESTED, the message MUST be a browser URL to a configuration UI where further configuration can take place"
          }
        },
        "required": [
          "urn",
          "type",
          "field_urn",
          "application",
          "status"
        ]
      },
      "Application": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "ratio": {
            "type": "integer",
            "description": "Percentage of the daily irrigation (default=100)"
          }
        },
        "required": [
          "date"
        ]
      },
      "ApplicationDetails": {
        "type": "object",
        "properties": {
          "application_map": {
            "type": "object",
            "properties": {
              "total_amount": {
                "type": "number",
                "format": "float",
                "description": "Total amount of water in m<sup>3</sup>"
              },
              "download_url": {
                "type": "string",
                "format": "uri",
                "description": "URL to download the GeoPackage application_map (with GET and service Bearer token). It is highly RECOMMENDED that Application maps should be requested just-in-time, just before starting the actual work on a field."
              },
              "url_expires_at": {
                "type": "string",
                "format": "date-time",
                "description": "date-time at which download URL expires"
              }
            },
            "required": [
              "total_amount",
              "download_url",
              "url_expires_at"
            ]
          }
        },
        "required": [
          "application_map"
        ]
      },
      "Recommendation": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date",
            "description": "Date that the irrigation should performed"
          },
          "applications": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "date_time": {
                  "type": "string",
                  "format": "date-time",
                  "description": "Date-time that the application of water should performed. The date MUST be the same as the recommendation date"
                },
                "ratio": {
                  "type": "integer",
                  "description": "Percentage of the daily irrigation. Either all applications have a defined ratio, in which case it must total 100, or none have ratio defined in which case the distribution is assumed to be even."
                }
              },
              "required": [
                "date_time",
                "ratio"
              ]
            }
          }
        },
        "example": {
          "date": "2021-07-31",
          "applications": [
            {
              "date_time": "2021-07-31T10:00:00Z"
            },
            {
              "date_time": "2021-07-31T18:00:00Z"
            }
          ]
        }
      },
      "SimpleError": {
        "type": "string",
        "description": "Plain text message (may be empty).",
        "example": "optional error message"
      },
      "DetailedError": {
        "type": "object",
        "description": "This defines the structure of an error payload when one is present. Actual messages and additional error information content may change from one implementation to another",
        "properties": {
          "message": {
            "type": "string",
            "description": "error description"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Additional detailed information"
          }
        },
        "required": [
          "message"
        ],
        "example": {
          "message": "general error message",
          "errors": [
            "optional",
            "additional",
            "details"
          ]
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
